# AI Social Factory - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=AI Social Factory
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ============================================================================
# SECURITY
# ============================================================================
# IMPORTANT: Change these in production!
API_KEY=change-this-in-production
SECRET_KEY=super-secret-key-change-in-production
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5678","http://localhost:5500"]

# ============================================================================
# GEMINI API (AI Content Generation)
# ============================================================================
# Get your API key from: https://ai.google.dev/ or https://aistudio.google.com/apikey
GEMINI_API_KEY=AIzaSy...your_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.9

# ============================================================================
# VIDEO GENERATION
# ============================================================================
VIDEO_MODEL_PATH=./local_t2v_model
VIDEO_OUTPUT_DIR=./generated_videos
VIDEO_NUM_FRAMES=16
VIDEO_HEIGHT=256
VIDEO_WIDTH=256
USE_GPU=true

# ============================================================================
# GOOGLE SHEETS (Optional but Recommended)
# ============================================================================
# Setup Instructions:
# 1. Go to Google Cloud Console (https://console.cloud.google.com/)
# 2. Create a project and enable Google Sheets API
# 3. Create a service account and download credentials.json
# 4. Share your spreadsheet with the service account email (found in credentials.json)
GOOGLE_SHEETS_CREDENTIALS_FILE=./credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_from_url
GOOGLE_SHEETS_SHEET_NAME=Content_Calendar

# ============================================================================
# SLACK INTEGRATION
# ============================================================================
# Incoming Webhook URL
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: For interactive features
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# Default channel for notifications (include # symbol)
SLACK_CHANNEL=#content-review

# ============================================================================
# WORDPRESS CONFIGURATION
# ============================================================================
# WordPress REST API Setup:
# - For WordPress.com: https://wordpress.com/me/security/application-passwords
# - For Self-hosted: Dashboard → Users → Profile → Application Passwords
# IMPORTANT: Use Application Password, NOT your regular login password!
WORDPRESS_SITE_URL=https://yoursite.com
WORDPRESS_USERNAME=your_email@example.com
WORDPRESS_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# ============================================================================
# LINKEDIN INTEGRATION (Optional)
# ============================================================================
# LinkedIn API v2 Configuration:
# 1. Create a LinkedIn App: https://www.linkedin.com/developers/
# 2. Get OAuth 2.0 access token (requires r_liteprofile, w_member_social permissions)
# 3. Get your Person URN by running: python fixes/get_person_urn.py
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_PERSON_URN=urn:li:person:YOUR_PERSON_ID
LINKEDIN_ORGANIZATION_URN=urn:li:organization:YOUR_ORG_ID

# ============================================================================
# AUTO-PROCESSING
# ============================================================================
# Enable automatic Google Sheets polling and content processing
AUTO_PROCESS_ENABLED=true
SHEETS_POLLING_INTERVAL=60

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=sqlite:///./ai_social_factory.db

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================================================
# WORKFLOW SETTINGS
# ============================================================================
MAX_CONCURRENT_VIDEOS=3
VIDEO_GENERATION_TIMEOUT=180
APPROVAL_TIMEOUT=86400
