# AI Social Factory - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=AI Social Factory
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ============================================================================
# SECURITY
# ============================================================================
# Change these in production!
API_KEY=change-this-in-production
SECRET_KEY=super-secret-key-change-in-production
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5678","http://localhost:5500"]

# ============================================================================
# GEMINI API CONFIGURATION
# ============================================================================
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.9

# ============================================================================
# VIDEO GENERATION SETTINGS
# ============================================================================
VIDEO_MODEL_PATH=./local_t2v_model
VIDEO_OUTPUT_DIR=./generated_videos
VIDEO_NUM_FRAMES=16
VIDEO_HEIGHT=256
VIDEO_WIDTH=256
USE_GPU=true

# ============================================================================
# GOOGLE SHEETS CONFIGURATION
# ============================================================================
# 1. Create a Google Cloud project and enable Sheets API
# 2. Create a service account and download credentials.json
# 3. Share your spreadsheet with the service account email
GOOGLE_SHEETS_CREDENTIALS_FILE=./credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_SHEET_NAME=Content_Calendar

# ============================================================================
# SLACK CONFIGURATION
# ============================================================================
# Webhook URL for sending notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/triggers/your_webhook_url
# Bot token for interactive features (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# App token for Socket Mode (optional)
SLACK_APP_TOKEN=xapp-your-slack-app-token
# Default channel for notifications
SLACK_CHANNEL=#content-review

# ============================================================================
# WORDPRESS CONFIGURATION
# ============================================================================
# WordPress REST API configuration
# Note: You must use Application Passwords, not regular passwords
# Generate at: WordPress Admin > Users > Profile > Application Passwords
WORDPRESS_SITE_URL=https://yoursite.com
WORDPRESS_USERNAME=your_username
WORDPRESS_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# ============================================================================
# LINKEDIN CONFIGURATION
# ============================================================================
# LinkedIn API v2 configuration
# 1. Create a LinkedIn App at: https://www.linkedin.com/developers/
# 2. Get OAuth 2.0 access token
# 3. Get your Person URN using: python fixes/get_person_urn.py
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_PERSON_URN=urn:li:person:YOUR_PERSON_ID
LINKEDIN_ORGANIZATION_URN=urn:li:organization:YOUR_ORG_ID

# ============================================================================
# AUTO-PROCESSING CONFIGURATION
# ============================================================================
# Automatic Google Sheets polling and processing
SHEETS_POLLING_INTERVAL=60
AUTO_PROCESS_ENABLED=true

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=sqlite:///./ai_social_factory.db

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================================================
# WORKFLOW SETTINGS
# ============================================================================
MAX_CONCURRENT_VIDEOS=3
VIDEO_GENERATION_TIMEOUT=180
APPROVAL_TIMEOUT=86400
